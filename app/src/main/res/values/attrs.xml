<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorPickerView">
        <attr name="indicatorColor" format="color"/><!--指示点颜色-->
        <attr name="indicatorEnable" format="boolean" /><!--是否启用指示点-->
        <attr name="orientation" format="integer">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="state">
        <attr name="state_on" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DigitState">
        <attr name="state_zero" format="boolean"/>
        <attr name="state_one" format="boolean"/>
    </declare-styleable>
</resources>
