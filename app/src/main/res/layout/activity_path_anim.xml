<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_svg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:id="@+id/iv_plus_minus"
        android:src="@drawable/animated_sl_plusmius"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/iv_numberChange"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:src="@drawable/animated_sl_digits"/>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:src="@drawable/animated_selector_shape"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp" />
</LinearLayout>
